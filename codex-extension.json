{
  "name": "codex-prd",
  "version": "2.0.0",
  "description": "PRD Extension for Codex CLI - Context-Driven Development with Simplified Workflows",
  "author": "Vedant Parmar",
  "compatibility": {
    "codexCLI": ">=1.0.0",
    "platform": "OpenAI Codex CLI only"
  },
  "features": [
    "Context-Driven Development",
    "Spec-Driven Implementation",
    "Track Management",
    "State-Based Resume",
    "Auto-Generate Options",
    "Streamlined Q&A",
    "Codex Skills Integration"
  ],
  "integration": {
    "method": "codex-skills",
    "skillsLocation": [
      "~/.codex/skills/codex/ (user-scoped, all projects)",
      ".codex/skills/codex/ (repo-scoped, this project only)"
    ],
    "usage": "codex CLI with skills enabled (--enable-skills flag or config)",
    "invocation": "$setup, $newTrack, $implement, $status in codex TUI"
  },
  "skills": {
    "$setup": {
      "file": "commands/codex/setup.toml",
      "description": "Initialize project with product, tech stack, and workflow"
    },
    "$newTrack": {
      "file": "commands/codex/newTrack.toml",
      "description": "Create new feature/bug track with spec and plan"
    },
    "$implement": {
      "file": "commands/codex/implement.toml",
      "description": "Execute implementation following the active plan"
    },
    "$status": {
      "file": "commands/codex/status.toml",
      "description": "View current project and track status"
    }
  },
  "installation": {
    "user_scoped": {
      "location": "~/.codex/skills/codex/",
      "command": "cp -r commands/codex ~/.codex/skills/",
      "scope": "Available in all projects"
    },
    "repo_scoped": {
      "location": ".codex/skills/codex/",
      "command": "cp -r commands/codex .codex/skills/",
      "scope": "Only available in this repository"
    }
  },
  "requirements": {
    "codex_cli": "Install from OpenAI",
    "skills_enabled": "Use --enable-skills flag or set in ~/.codex/config.toml",
    "authentication": "codex login required"
  }
}
